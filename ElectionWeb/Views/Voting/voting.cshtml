</head>
<body>
    <div>
        <h2>Виберіть вашого кандидата</h2>

        <form>
            @foreach (var n in ViewBag.Candidate)
            {
                @foreach (var e in ViewBag.Person)
                {
                    if (n.PersonId == e.Id)
                    {
                        if (n.ElectionId == 1)
                        {

                            <span>
                                <input type="radio" value=@n.Id checked name="tech" />  @e.Name @e.Surname
                            </span>

                            <p>
                                '@n.PreelectionProgram'

                            </p>
                        }
                        <p>

                        </p>
                    }
                }
            }

            <p>
                <button type="submit" formmethod="get" formaction="TyForVoting">Проголосувати</button>
                <button type="reset">Відмінна</button>
            </p>
        </form>
    </div>
</body>
</html>