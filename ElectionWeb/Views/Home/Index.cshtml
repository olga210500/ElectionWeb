@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vybir</title>
    <style typeof="text/css">
        html, body {
            color:white;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            background: #1c1c1c;
            background-repeat: no-repeat;
            background: -webkit-linear-gradient(to bottom,#000080,#1c1c1c);
            background: -moz-linear-gradient(to bottom,#000080,#1c1c1c);
            background: -ms-linear-gradient(to bottom,#000080,#1c1c1c);
            background: -o-linear-gradient(to bottom,#000080,#1c1c1c);
            background: linear-gradient(to bottom,#000080,#1c1c1c);
            font: white;
        }
        input, textarea {
            margin-bottom: 10px;
            font-size: 20pt;
            padding: 15px 10px 10px;
            border: 1px solid #cecece;
            background-color: #FFFACD;
            border-radius: 5px;
            width: 20%;
            outline: none;
            cursor:pointer;
            color:black;
            border: none;
            outline:none;
            margin:0;
            font-weight:bold;
        }
        a {
            color: #FFE7BA;
            text-decoration:none;
        }
        a:hover {
            color: #A2B5CD;
            text-decoration: none;
        }
        span
        {
            border: 4px solid #FFFF00;
            padding: 10px;
        }
        form{
            text-align:right;
            margin-top:0;
        }
        .submit{
            background-color:#FFFACD;
            padding: 12px 45px;
            border-radius:5px;
            cursor:pointer;
            color:black;
            border: none;
            outline:none;
            margin:0;
            font-weight:bold;
        }
        input:hover{
            background-color:#A2B5CD;
        }
    </style>
</head>
<body color:white>
    <div>
        <h1><big>Ти не маєш права мовчати! </big></h1>
        <form action="Home/About">
            <input type="submit" value="вхід" class="=submit" />
        </form>
        <br/>
        <br/>
        <form action="Home/About">
        <input type="submit" value="реєстрація" class="=submit" />
        </form>

            <hr />
            @foreach (var n in ViewBag.Nation)
            {
                @foreach (var e in ViewBag.Election)
                {
                    @if (e.NationId == n.Id)
                    {
                        <h1 align="center">
                            <span>
                                <strong>
                                    <big>
                                        <a href="/Home/About">@n.Country</a>
                                    </big>
                                </strong>
                            </span>
                        </h1>
                        <br />
                        <br />
                        break;
                    }
                }
            }

    </div>
</body>
</html>